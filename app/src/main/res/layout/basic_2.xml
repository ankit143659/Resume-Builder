<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="𝐀𝐑𝐈𝐒 𝐌𝐀𝐋𝐈𝐆𝐈𝐀𝐍𝐍𝐈𝐒"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_weight="2"
            android:textColor="#2a3d66"/>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/resumr"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- General Information Section -->
    <TextView
        android:id="@+id/general_info_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="𝐏𝐄𝐑𝐒𝐎𝐍𝐀𝐋 𝐃𝐄𝐓𝐀𝐈𝐋𝐒"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#5A5A5A"
        android:padding="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/personalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/professional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="𝐄𝐃𝐔𝐂𝐀𝐓𝐈𝐎𝐍"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:background="#5A5A5A"
        android:padding="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/educationalDeatils"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="8dp"/>

    <!-- Academic Studies Section -->
    <TextView
        android:id="@+id/academic_studies_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="𝐒𝐊𝐈𝐋𝐋𝐒"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:background="#5A5A5A"
        android:padding="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/skillDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="8dp"/>

    <!-- Professional Experience Section -->
    <TextView
        android:id="@+id/professional_experience_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="𝐄𝐗𝐏𝐄𝐑𝐈𝐄𝐍𝐂𝐄"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:background="#5A5A5A"
        android:padding="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/experienceDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/professional_experience_labeluh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="𝐏𝐑𝐎𝐉𝐄𝐂𝐓𝐒"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="10sp"
        android:textColor="#FFFFFF"
        android:background="#5A5A5A"
        android:padding="4dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/projectDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="8dp"/>


</LinearLayout>
