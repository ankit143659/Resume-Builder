<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="98dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:contentDescription="Profile Image"
        android:src="@drawable/resumr" />

    <!-- Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edward Hloomstrong"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_toEndOf="@id/profile_image"
        android:layout_alignTop="@id/profile_image"/>

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Graphic Designer"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_toEndOf="@id/profile_image"
        android:layout_below="@id/name"/>

    <!-- Contact Information -->
    <TextView
        android:id="@+id/contact_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123 Park Avenue, Michigan, MI 60609\nwww.hloom.com | info@hloom.com | (123) 456-7899"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_toEndOf="@id/profile_image"
        android:layout_below="@id/title"
        android:layout_marginTop="8dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10253F"
        android:id="@+id/v1"
        android:layout_below="@id/contact_info"
        android:layout_marginVertical="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v1"
        android:id="@+id/professional_attributes_label"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDUCATION \n DEATILS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"/>

        <!-- Attributes Content -->
        <TextView
            android:id="@+id/professional_attributes_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="• High attention to detail, adaptable, flexible, and quick to learn.\n• Strong organizational skills and ability to prioritize work.\n• Ability to work both independently and as part of a team."
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"/>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10253F"
        android:id="@+id/v2"
        android:layout_below="@id/professional_attributes_label"
        android:layout_marginVertical="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v2"
        android:id="@+id/skill"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKILLS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"/>

        <!-- Attributes Content -->
        <TextView
            android:id="@+id/ff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45sp"
            android:text="• High attention to detail, adaptable, flexible, and quick to learn.\n• Strong organizational skills and ability to prioritize work.\n• Ability to work both independently and as part of a team."
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"/>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10253F"
        android:id="@+id/v3"
        android:layout_below="@id/skill"
        android:layout_marginVertical="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v3"
        android:id="@+id/professional_attributes_label2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROJECT \n DETAILS"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"/>

        <!-- Attributes Content -->
        <TextView
            android:id="@+id/professional_attributes_conten3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="• High attention to detail, adaptable, flexible, and quick to learn.\n• Strong organizational skills and ability to prioritize work.\n• Ability to work both independently and as part of a team."
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"/>

    </LinearLayout>







</RelativeLayout>
