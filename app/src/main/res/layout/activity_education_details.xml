<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Education_details">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textColor="@color/white"
        android:id="@+id/ed"
        android:paddingTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingLeft="17dp"
        android:background="@drawable/header_background"
        android:text="EDUCATION DETAILS"
        android:textSize="20sp">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:text="Add"
        android:id="@+id/addEducation"
        android:drawableRight="@drawable/baseline_add_24"
        android:textSize="22sp"
        android:backgroundTint="#022147"
        android:layout_below="@id/ed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="50dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/addEducation"
        android:background="@color/white"
        android:id="@+id/scrollView"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/layoutContainer"
            android:layout_height="wrap_content">

        </LinearLayout>

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:text="Save"
        android:id="@+id/savebtn"
        android:gravity="center"
        android:textSize="22sp"
        android:visibility="gone"
        android:layout_below="@id/scrollView"
        android:backgroundTint="#022147"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="50dp" />

</RelativeLayout>